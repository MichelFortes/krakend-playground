{
    "$schema": "https://www.krakend.io/schema/v2.6/krakend.json",
    "version": 3,
    "extra_config": {
        "telemetry/opentelemetry": {
            "service_name": "krakend",
            "trace_sample_rate": 1,
            "layers": {
                "global": {
                    "report_headers": true,
                    "disable_propagation": false,
                    "disable_metrics": true,
                    "disable_traces": false
                },
                "proxy": {
                    "disable_metrics": true,
                    "disable_traces": true
                },
                "backend": {
                    "traces": {
                        "disable_stage": true,
                        "report_headers": true,
                        "round_trip": true,
                        "read_payload": true
                    },
                    "metrics": {
                        "disable_stage": true
                    }
                }
            },
            "exporters": {
                "otlp": [
                    {
                        "host": "alloy",
                        "port": 4317,
                        "name": "grafana_alloy",
                        "use_http": false,
                        "disable_metrics": true,
                        "disable_traces": false
                    }
                ]
            }
        }
    },
    "endpoints": [
        {
            "endpoint": "/pets",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "pets:8080"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/pets/{id}",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "pets:8080"
                    ],
                    "url_pattern": "/{id}"
                }
            ]
        },
        {
            "endpoint": "/doctors",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "doctors:8080"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/doctors/{id}",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "doctors:8080"
                    ],
                    "url_pattern": "/{id}"
                }
            ]
        },
        {
            "endpoint": "/owners",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "owners:8080"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/owners/{id}",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "owners:8080"
                    ],
                    "url_pattern": "/{id}"
                }
            ]
        },
        {
            "endpoint": "/rate-limit/service",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "extra_config": {
                "qos/ratelimit/router": {
                    "capacity": 1,
                    "max_rate": 1,
                    "every": "1s",
                    "strategy": "ip"
                }
            },
            "backend": [
                {
                    "host": [
                        "pets:8080"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/rate-limit/client",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "extra_config": {
                "qos/ratelimit/router": {
                    "client_capacity": 1,
                    "client_max_rate": 1,
                    "every": "1s",
                    "strategy": "ip"
                }
            },
            "backend": [
                {
                    "host": [
                        "pets:8080"
                    ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/deny/owners/{id}",
            "method": "GET",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "owners:8080"
                    ],
                    "url_pattern": "/{id}",
                    "deny": [
                        "address",
                        "phone"
                    ]
                }
            ]
        },
        {
            "endpoint": "/allow/owners/{id}",
            "method": "GET",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "backend": [
                {
                    "host": [
                        "owners:8080"
                    ],
                    "url_pattern": "/{id}",
                    "allow": [
                        "firstName",
                        "profileImage"
                    ]
                }
            ]
        },
        {
            "endpoint": "/sequential/pets/{id}",
            "method": "GET",
            "input_headers": ["*"],
            "input_query_strings": ["*"],
            "extra_config": {
                "proxy": {
                    "sequential": true
                }
            },
            "backend": [
                {
                    "host": [
                        "pets:8080"
                    ],
                    "url_pattern": "/{id}",
                    "mapping": {
                        "id": "petId",
                        "name": "petName",
                        "breed": "petBreed"
                    }
                },
                {
                    "host": [
                        "owners:8080"
                    ],
                    "url_pattern": "/{resp0_ownerId}",
                    "allow": [
                        "id",
                        "firstName",
                        "lastName",
                        "profileImage"
                    ],
                    "mapping": {
                        "id": "ownerId",
                        "firstName": "ownerFirstName",
                        "lastName": "ownerLastName",
                        "profileImage": "ownerProfileImage"
                    }
                },
                {
                    "host": [
                        "doctors:8080"
                    ],
                    "url_pattern": "/{resp0_doctorId}",
                    "mapping": {
                        "id": "doctorId",
                        "name": "doctorName"
                    }
                }
            ]
        },
        {
            "endpoint": "/protected/pets/{id}",
            "method": "GET",
            "output_encoding": "no-op",
            "input_headers": ["x-jwt-azp"],
            "extra_config": {
                "auth/validator": {
                    "alg": "RS256",
                    "jwk_url": "http://keycloak:8080/realms/veterinary_clinic/protocol/openid-connect/certs",
                    "disable_jwk_security": true,
                    "cache": true,
                    "scopes_key": "scope",
                    "scopes": [
                        "pets.read.all"
                    ],
                    "propagate_claims": [
                        ["azp", "x-jwt-azp"]
                    ]
                }
            },
            "backend": [
                {
                    "host": [
                        "pets:8080"
                    ],
                    "url_pattern": "/{id}"
                }
            ]
        }
    ]
}